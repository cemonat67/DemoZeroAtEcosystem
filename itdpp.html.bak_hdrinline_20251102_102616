    <script>
        function calculateITCarbon() {
            // Equipment calculations
            const equipmentTypes = ['desktop', 'laptop', 'printer', 'server', 'monitor', 'other'];
            let totalEquipmentCarbon = 0;
            let totalDevices = 0;
            let totalPowerConsumption = 0;
            
            equipmentTypes.forEach(type => {
                const qty = parseFloat(document.getElementById(`${type}_qty`).value) || 0;
                const power = parseFloat(document.getElementById(`${type}_power`).value) || 0;
                const hours = parseFloat(document.getElementById(`${type}_hours`).value) || 0;
                
                // Monthly carbon: qty * power(kW) * hours * 30 days * 0.44 kg CO‚ÇÇ/kWh / 1000
                const monthlyCarbon = qty * (power / 1000) * hours * 30 * 0.44 / 1000;
                totalEquipmentCarbon += monthlyCarbon;
                
                totalDevices += qty;
                totalPowerConsumption += qty * power * hours * 30 / 1000; // kWh
                
                document.getElementById(`${type}_carbon`).textContent = monthlyCarbon.toFixed(1);
            });

            // Cloud services calculations
            const m365Cost = parseFloat(document.getElementById('m365_cost').value) || 0;
            const cloudCost = parseFloat(document.getElementById('cloud_cost').value) || 0;
            const softwareCost = parseFloat(document.getElementById('software_cost').value) || 0;
            const telecomCost = parseFloat(document.getElementById('telecom_cost').value) || 0;
            
            const m365Carbon = (m365Cost * 0.45) / 1000; // tons CO‚ÇÇ
            const cloudCarbon = (cloudCost * 0.52) / 1000; // tons CO‚ÇÇ
            const softwareCarbon = (softwareCost * 0.28) / 1000; // tons CO‚ÇÇ
            const telecomCarbon = (telecomCost * 0.35) / 1000; // tons CO‚ÇÇ
            
            const totalCloudCarbon = m365Carbon + cloudCarbon + softwareCarbon + telecomCarbon;
            
            // Update cloud service displays
            document.getElementById('m365_carbon').textContent = m365Carbon.toFixed(1) + ' tons';
            document.getElementById('cloud_carbon').textContent = cloudCarbon.toFixed(1) + ' tons';
            document.getElementById('software_carbon').textContent = softwareCarbon.toFixed(1) + ' tons';
            document.getElementById('telecom_carbon').textContent = telecomCarbon.toFixed(1) + ' tons';
            
            // Total calculations
            const totalITCarbon = totalEquipmentCarbon + totalCloudCarbon;
            const employees = 180; // from Phase 1
            const perEmployeeIT = (totalITCarbon * 1000) / employees; // kg CO‚ÇÇ/employee
            
            // Equipment vs Cloud split
            const equipmentPercentage = (totalEquipmentCarbon / totalITCarbon) * 100;
            
            // Efficiency score calculation (based on industry benchmarks)
            const powerManagementScore = Math.min(100, 100 - (totalEquipmentCarbon / totalITCarbon) * 50);
            const cloudAdoptionScore = Math.min(100, (totalCloudCarbon / totalITCarbon) * 200);
            const deviceEfficiencyScore = Math.max(0, 100 - (perEmployeeIT - 60) * 2);
            const efficiencyScore = (powerManagementScore + cloudAdoptionScore + deviceEfficiencyScore) / 3;
            
            // Power savings potential
            const powerSavingsPotential = 24;
            
            // Lifecycle carbon debt
            const lifecycleDebt = 145;
            
            // Summary statistics
            const avgPowerPerDevice = totalDevices > 0 ? totalPowerConsumption / totalDevices / 30 / 8 : 0; // Average watts per device
            const monthlyKwh = totalPowerConsumption;
            const annualCost = monthlyKwh * 12 * 0.12; // Assuming $0.12/kWh
            
            // Update dashboard
            document.getElementById('total_it_carbon').textContent = totalITCarbon.toFixed(1);
            document.getElementById('per_employee_it').textContent = Math.round(perEmployeeIT);
            document.getElementById('equipment_percentage').textContent = Math.round(equipmentPercentage) + '%';
            document.getElementById('efficiency_score').textContent = Math.round(efficiencyScore);
            document.getElementById('power_savings').textContent = powerSavingsPotential;
            document.getElementById('lifecycle_debt').textContent = lifecycleDebt;
            
            // Update summary statistics
            document.getElementById('total_devices').textContent = totalDevices;
            document.getElementById('avg_power').textContent = Math.round(avgPowerPerDevice);
            document.getElementById('monthly_kwh').textContent = Math.round(monthlyKwh).toLocaleString();
            document.getElementById('annual_cost').textContent = ' + Math.round(annualCost).toLocaleString();
            document.getElementById('carbon_per_kwh').textContent = '0.44';
            
            // Update progress bars
            updateProgressBars(totalITCarbon, perEmployeeIT, equipmentPercentage, efficiencyScore, powerSavingsPotential, lifecycleDebt);
        }
        
        function updateProgressBars(total, employee, equipment, efficiency, savings, lifecycle) {
            const progressBars = document.querySelectorAll('.progress-fill');
            if (progressBars.length >= 6) {
                progressBars[0].style.width = Math.min(100, (total / 25) * 100) + '%';
                progressBars[1].style.width = Math.min(100, (employee / 150) * 100) + '%';
                progressBars[2].style.width = equipment + '%';
                progressBars[3].style.width = efficiency + '%';
                progressBars[4].style.width = savings + '%';
                progressBars[5].style.width = Math.min(100, (lifecycle / 200) * 100) + '%';
            }
        }
        
        // Initialize calculations on page load
        document.addEventListener('DOMContentLoaded', function() {
            calculateITCarbon();
        });
        
        // Auto-calculate on any input change
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('input', calculateITCarbon);
        });
    </script>
</body>
