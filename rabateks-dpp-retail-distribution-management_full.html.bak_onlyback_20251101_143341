    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script>
        // Facility Type Chart
        const facilityCtx = document.getElementById('facilityChart').getContext('2d');
        new Chart(facilityCtx, {
            type: 'doughnut',
            data: {
                labels: ['Retail Stores', 'Distribution Centers', 'Warehouses', 'Flagship Stores', 'Outlet Stores'],
                datasets: [{
                    data: [32, 8, 4, 2, 1],
                    backgroundColor: ['#f9ba00', '#02154e', '#005530', '#D51635', '#666'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'bottom', labels: { padding: 20, usePointStyle: true } }
                }
            }
        });

        // Energy Consumption Chart
        const energyCtx = document.getElementById('energyChart').getContext('2d');
        new Chart(energyCtx, {
            type: 'bar',
            data: {
                labels: ['Flagship Stores', 'Retail Stores', 'Distribution Centers', 'Warehouses', 'Outlet Stores'],
                datasets: [{
                    label: 'Energy Consumption (MWh)',
                    data: [8.5, 5.2, 28.0, 45.0, 4.8],
                    backgroundColor: ['#D51635', '#f9ba00', '#02154e', '#005530', '#666'],
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Energy Consumption (MWh)' }
                    }
                }
            }
        });

        // Interactive tags add/remove
        document.getElementById('facility-notes').addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && e.ctrlKey) {
                const value = this.value.trim();
                if (value) {
                    const tagsContainer = document.getElementById('facility-tags');
                    const tag = document.createElement('div');
                    tag.className = 'tag';
                    tag.innerHTML = `${value} <span class="remove">√ó</span>`;
                    tagsContainer.appendChild(tag);
                    tag.querySelector('.remove').addEventListener('click', function() { tag.remove(); });
                }
            }
        });
        document.querySelectorAll('.tag .remove').forEach(remove => {
            remove.addEventListener('click', function() { this.parentElement.remove(); });
        });

        // Auto-calc CO2 from energy & facility type (simple demo)
        document.getElementById('monthly-energy').addEventListener('blur', function() {
            const energy = parseFloat(this.value);
            const facilityType = document.getElementById('facility-type').value;
            if (energy && facilityType) {
                let ef;
                switch (facilityType) {
                    case 'Retail Store': ef = 0.4; break;
                    case 'Flagship Store': ef = 0.38; break;
                    case 'Outlet Store': ef = 0.42; break;
                    case 'Distribution Center': ef = 0.45; break;
                    case 'Warehouse': ef = 0.41; break;
                    case 'Pop-up Store': ef = 0.35; break;
                    default: ef = 0.4;
                }
                document.getElementById('carbon-footprint').value = (energy * ef).toFixed(1);
            }
        });

        // Dummy submit
        document.querySelector('.btn-primary').addEventListener('click', function() {
            alert('Retail/Distribution location added successfully!');
        });
    </script>


