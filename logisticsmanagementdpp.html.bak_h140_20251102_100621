    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script>
        // Transportation Mode Chart
        const transportCtx = document.getElementById('transportChart').getContext('2d');
        new Chart(transportCtx, {
            type: 'doughnut',
            data: {
                labels: ['Sea Freight', 'Road Transport', 'Air Freight', 'Rail Transport', 'Intermodal'],
                datasets: [{
                    data: [42, 28, 15, 8, 7],
                    backgroundColor: ['#005530', '#f9ba00', '#D51635', '#02154e', '#666'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 20,
                            usePointStyle: true
                        }
                    }
                }
            }
        });

        // Emissions Chart
        const emissionsCtx = document.getElementById('emissionsChart').getContext('2d');
        new Chart(emissionsCtx, {
            type: 'bar',
            data: {
                labels: ['EU Routes', 'Asia Routes', 'Domestic', 'Americas', 'Middle East'],
                datasets: [{
                    label: 'CO‚ÇÇ Emissions (tonnes)',
                    data: [6.2, 4.8, 2.1, 1.8, 0.8],
                    backgroundColor: ['#005530', '#f9ba00', '#02154e', '#666', '#D51635'],
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'CO‚ÇÇ Emissions (tonnes)'
                        }
                    }
                }
            }
        });

        // Interactive functionality
        document.getElementById('route-notes').addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && e.ctrlKey) {
                const value = this.value.trim();
                if (value) {
                    const tagsContainer = document.getElementById('logistics-tags');
                    const tag = document.createElement('div');
                    tag.className = 'tag';
                    tag.innerHTML = `${value} <span class="remove">√ó</span>`;
                    tagsContainer.appendChild(tag);
                    
                    tag.querySelector('.remove').addEventListener('click', function() {
                        tag.remove();
                    });
                }
            }
        });

        // Remove existing tags
        document.querySelectorAll('.tag .remove').forEach(remove => {
            remove.addEventListener('click', function() {
                this.parentElement.remove();
            });
        });

        // Auto-calculate carbon emissions based on transport mode and distance
        document.getElementById('transport-mode').addEventListener('change', function() {
            const distance = document.getElementById('distance').value;
            const weight = document.getElementById('weight').value;
            
            if (distance && weight) {
                let emissionFactor;
                switch(this.value) {
                    case 'Sea Freight': emissionFactor = 0.014; break;
                    case 'Road Transport': emissionFactor = 0.089; break;
                    case 'Rail Transport': emissionFactor = 0.041; break;
                    case 'Air Freight': emissionFactor = 0.602; break;
                    case 'Intermodal': emissionFactor = 0.025; break;
                    default: emissionFactor = 0;
                }
                
                const emission = (distance * weight * emissionFactor / 1000).toFixed(1);
                document.getElementById('carbon-emission').value = emission;
            }
        });

        // Form validation and submission
        document.querySelector('.btn-primary').addEventListener('click', function() {
            // Add form validation and submission logic here
            alert('Logistics route added successfully!');
        });
    </script>

    <!-- Removed custom back link script to allow default link behavior -->

