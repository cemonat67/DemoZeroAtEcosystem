    <script>
        function calculateCarbon() {
            const electricity = parseFloat(document.getElementById('electricity').value) || 0;
            const gas = parseFloat(document.getElementById('gas').value) || 0;
            const area = parseFloat(document.getElementById('area').value) || 1;
            const employees = parseFloat(document.getElementById('employees').value) || 1;

            // Carbon emission factors (Turkey specific)
            const electricityFactor = 0.44; // kg CO‚ÇÇ/kWh
            const gasFactor = 0.82; // kg CO‚ÇÇ/m¬≥

            // Calculations
            const electricCO2 = (electricity * electricityFactor) / 1000; // ton CO‚ÇÇ
            const gasCO2 = (gas * gasFactor) / 1000; // ton CO‚ÇÇ
            const totalCO2 = electricCO2 + gasCO2;
            const perEmployee = (totalCO2 * 1000) / employees; // kg CO‚ÇÇ/employee
            const intensity = (totalCO2 * 1000) / area; // kg CO‚ÇÇ/m¬≤

            // Benchmark calculation (industry average: 8-12 kg CO‚ÇÇ/m¬≤/month)
            const benchmarkScore = Math.max(0, Math.min(100, 100 - ((intensity - 8) / 4) * 100));

            // Update display
            document.getElementById('totalCO2').textContent = totalCO2.toFixed(1);
            document.getElementById('perEmployee').textContent = Math.round(perEmployee);
            document.getElementById('electricCO2').textContent = electricCO2.toFixed(1);
            document.getElementById('gasCO2').textContent = gasCO2.toFixed(1);
            document.getElementById('intensity').textContent = intensity.toFixed(1);
            document.getElementById('benchmarkScore').textContent = Math.round(benchmarkScore);

            // Update status badges
            updateStatus('totalStatus', totalCO2, [20, 30]);
            updateStatus('employeeStatus', perEmployee, [120, 180]);

            // Update progress bars
            updateProgressBars(totalCO2, perEmployee, intensity, benchmarkScore);
        }

        function updateStatus(elementId, value, thresholds) {
            const element = document.getElementById(elementId);
            if (value < thresholds[0]) {
                element.className = 'status-badge status-low';
                element.textContent = 'LOW';
            } else if (value < thresholds[1]) {
                element.className = 'status-badge status-medium';
                element.textContent = 'MEDIUM';
            } else {
                element.className = 'status-badge status-high';
                element.textContent = 'HIGH';
            }
        }

        function updateProgressBars(total, employee, intensity, benchmark) {
            const progressBars = document.querySelectorAll('.progress-fill');
            progressBars[0].style.width = Math.min(100, (total / 40) * 100) + '%';
            progressBars[1].style.width = Math.min(100, (employee / 200) * 100) + '%';
            progressBars[2].style.width = Math.min(100, (total / 30) * 100) + '%';
            progressBars[3].style.width = Math.min(100, (total / 30) * 100) + '%';
            progressBars[4].style.width = Math.min(100, (intensity / 15) * 100) + '%';
            progressBars[5].style.width = benchmark + '%';
        }

        // Initialize with default values
        document.addEventListener('DOMContentLoaded', function() {
            calculateCarbon();
        });
    </script>


