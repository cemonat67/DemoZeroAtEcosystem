    // --- File routing (match your repo exactly) ---
    function openDPP(dppType){
      const dppUrls = {
        'fibre':'fibredppchatgpt08aug25final.html',
        'yarn':'yarn-dppchatgptfinal.html',
        'fabric':'fabric-dppchatgptfinal.html',
        'chemicals':'chemicals-dyes-management.dpp.html',
        'finishing':'finishingtest-with-rabateks-dpp.html',
        'garment':'GarmentDPP.html',
        'energy':'energy-utilities-managementdpp.html',
        'packaging':'packagingmanagementdpp-2_full_updated.html',
        'logistics':'logisticsmanagementdpp.html',
        'delivery':'orderdeliverymanagementdpp.html',
        'retail':'rabateks-dpp-retail-distribution-management_full.html',
        'office':'officedpp.html',
        'it':'itdpp.html',
        'supplies':'officesuppliesandwastedpp.html',
        'transport':'transportdpp.html'
      };
      const url = dppUrls[dppType];
      if(url){ 
        // Open in the same tab
        window.location.href = url;
      }
      else{ 
        alert(`DPP mapping not found for ${dppType}`); 
      }
    }

    // --- Modal helpers ---
    const $ = (sel)=>document.querySelector(sel);
    const backdrop = $('#modalBackdrop');
    const titleEl = $('#modalTitle');
    const bodyEl  = $('#modalBody');
    const closeEl = $('#modalClose');

    function openModal(title, html){
      titleEl.textContent = title;
      bodyEl.innerHTML = html;
      backdrop.style.display = 'flex';
      backdrop.setAttribute('aria-hidden','false');
    }
    function closeModal(){
      backdrop.style.display = 'none';
      backdrop.setAttribute('aria-hidden','true');
    }
    closeEl.addEventListener('click', closeModal);
    backdrop.addEventListener('click', (e)=>{ if(e.target===backdrop) closeModal(); });
    document.addEventListener('keydown', (e)=>{ if(e.key==='Escape') closeModal(); });

    // --- Quick Actions content ---
