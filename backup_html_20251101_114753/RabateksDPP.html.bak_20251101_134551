    // Subtle stat highlight animation
    function updateStats(){
      document.querySelectorAll('.stat-value,.metric-value').forEach(el=>{
        el.style.transition='color .3s ease';
        el.style.color='var(--gold)';
        setTimeout(()=>{ el.style.color=''; },300);
      });
    }
    setInterval(updateStats,30000);

    // Click animation for cards
    document.addEventListener('DOMContentLoaded', ()=>{
      document.querySelectorAll('.dpp-card').forEach(card=>{
        card.addEventListener('click', function(){
          this.style.opacity='0.7';
          this.style.transform='translateY(-8px) scale(0.98)';
          setTimeout(()=>{ this.style.opacity=''; this.style.transform=''; },200);
        });
      });
      console.log('üéâ Zero@Ecosystem ‚Äî End-to-end sustainable decision support platform loaded successfully!');
