<!doctype html>
<meta charset="utf-8">
<style>
  html,body{margin:0}
  .wrap{width:100%;height:280px;background:#02154e;display:flex;align-items:center;justify-content:center;position:relative;overflow:hidden}
  .line{position:absolute;left:8%;right:8%;height:6px;background:#f9ba00;bottom:76px;opacity:.95}
  .title{color:#fff;font-family:Helvetica,Arial,sans-serif;font-weight:700;font-size:56px;letter-spacing:.2px;margin:0;line-height:1}
  .sub{color:#fff;font-family:Helvetica,Arial,sans-serif;font-size:18px;opacity:.92;margin:16px 0 0;text-align:center}
  .at{color:#f9ba00}
  .fade{animation:fade .5s ease}
  @keyframes fade{from{opacity:0;transform:translateY(6px)}to{opacity:1;transform:none}}
</style>
<div class="wrap">
  <div style="text-align:center">
    <h1 class="title">
      <span id="zero">Zero</span><span class="at">@</span><span id="part">Ecosystem</span>
    </h1>
    <div class="line"></div>
    <p class="sub">Unified sustainability intelligence layer</p>
  </div>
</div>
<script>
  const items = ["Ecosystem","Production","Design","Supply","Health","Industry","TexYard","Agents"];
  let i = 0;
  const el = document.getElementById('part');
  setInterval(()=>{
    i = (i+1) % items.length;
    el.classList.remove('fade');
    void el.offsetWidth; // reflow
    el.textContent = items[i];
    el.classList.add('fade');
  }, 2200);
</script>
