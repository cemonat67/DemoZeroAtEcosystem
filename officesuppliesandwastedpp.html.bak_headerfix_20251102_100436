    <script>
        // Supplies Chart
        const suppliesCtx = document.getElementById('suppliesChart').getContext('2d');
        new Chart(suppliesCtx, {
            type: 'doughnut',
            data: {
                labels: ['Paper & Stationery', 'Catering & Food', 'Office Furniture', 'Cleaning Supplies', 'Packaging Materials'],
                datasets: [{
                    data: [3.2, 1.5, 1.4, 0.9, 0.6],
                    backgroundColor: ['#005530', '#D51635', '#f9ba00', '#02154e', '#666'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 20,
                            usePointStyle: true
                        }
                    }
                }
            }
        });

        // Sustainability Performance Chart
        const sustainabilityCtx = document.getElementById('sustainabilityChart').getContext('2d');
        new Chart(sustainabilityCtx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [
                    {
                        label: 'Recycling Rate (%)',
                        data: [62, 65, 68, 70, 68, 68],
                        borderColor: '#005530',
                        backgroundColor: 'rgba(0, 85, 48, 0.1)',
                        tension: 0.4
                    },
                    {
                        label: 'Sustainable Products (%)',
                        data: [45, 52, 58, 65, 72, 74],
                        borderColor: '#f9ba00',
                        backgroundColor: 'rgba(249, 186, 0, 0.1)',
                        tension: 0.4
                    },
                    {
                        label: 'Carbon Reduction (%)',
                        data: [15, 18, 22, 28, 32, 35],
                        borderColor: '#02154e',
                        backgroundColor: 'rgba(2, 21, 78, 0.1)',
                        tension: 0.4
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        title: {
                            display: true,
                            text: 'Percentage (%)'
                        }
                    }
                }
            }
        });

        // Interactive functionality
        document.getElementById('item-notes').addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && e.ctrlKey) {
                const value = this.value.trim();
                if (value) {
                    const tagsContainer = document.getElementById('sustainability-tags');
                    const tag = document.createElement('div');
                    tag.className = 'tag';
                    tag.innerHTML = `${value} <span class="remove">√ó</span>`;
                    tagsContainer.appendChild(tag);
                    
                    tag.querySelector('.remove').addEventListener('click', function() {
                        tag.remove();
                    });
                }
            }
        });

        // Remove existing tags
        document.querySelectorAll('.tag .remove').forEach(remove => {
            remove.addEventListener('click', function() {
                this.parentElement.remove();
            });
        });

        // Auto-calculate carbon footprint based on category
        document.getElementById('category').addEventListener('change', function() {
            const carbonFactorInput = document.getElementById('carbon-factor');
            switch(this.value) {
                case 'Paper & Stationery': carbonFactorInput.value = '3.3'; break;
                case 'Office Furniture': carbonFactorInput.value = '150.0'; break;
                case 'Cleaning Supplies': carbonFactorInput.value = '0.9'; break;
                case 'Packaging Materials': carbonFactorInput.value = '2.1'; break;
                case 'Catering & Food': carbonFactorInput.value = '1.2'; break;
                case 'Miscellaneous': carbonFactorInput.value = '0.85'; break;
                default: carbonFactorInput.value = '';
            }
        });

        // Auto-calculate monthly cost (example)
        document.getElementById('monthly-usage').addEventListener('blur', function() {
            const usage = parseFloat(this.value);
            const unitCost = parseFloat(document.getElementById('unit-cost').value);
            if (usage && unitCost) {
                const monthlyCost = (usage * unitCost).toFixed(2);
                console.log(`Monthly cost: ‚Ç¨${monthlyCost}`);
            }
        });

        // Update calculations when page loads (example values)
        function updateCalculations() {
            const paperCarbon = 3.2, furnitureCarbon = 1.4, cleaningCarbon = 0.9, packagingCarbon = 0.6, cateringCarbon = 1.5, miscCarbon = 0.8;
            const totalSuppliesCarbon = paperCarbon + furnitureCarbon + cleaningCarbon + packagingCarbon + cateringCarbon + miscCarbon;

            const paperWaste = 0.9, organicWaste = 0.6, plasticWaste = 0.5, generalWaste = 0.3;
            const totalWasteCarbon = paperWaste + organicWaste + plasticWaste + generalWaste;
            const totalSuppliesWasteCarbon = totalSuppliesCarbon + totalWasteCarbon;

            document.getElementById('total_supplies_carbon').textContent = totalSuppliesCarbon.toFixed(1);
            document.getElementById('total_waste_carbon').textContent = totalWasteCarbon.toFixed(1);
            document.getElementById('total_supplies_waste_carbon').textContent = totalSuppliesWasteCarbon.toFixed(1);

            const recyclingRate = 68, sustainableProducts = 74, carbonReduction = 35;
            const sustainabilityScore = Math.round((recyclingRate + sustainableProducts + carbonReduction) / 3);
            document.getElementById('sustainability_score').textContent = sustainabilityScore;
        }

        document.addEventListener('DOMContentLoaded', function() {
            updateCalculations();
            document.querySelectorAll('input, select').forEach(input => {
                input.addEventListener('change', updateCalculations);
            });
        });
    </script>

</body>
</html>
