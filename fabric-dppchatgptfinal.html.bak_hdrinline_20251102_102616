    <script>
        document.addEventListener('DOMContentLoaded', function() {
            
            // --- DATA & CONFIGURATION ---
            const yarnData = {
                'Organic Cotton': { co2: 2.5, score: 85, type: 'Natural Fiber' },
                'Recycled Cotton': { co2: 1.5, score: 90, type: 'Recycled' },
                'Recycled Polyester': { co2: 1.8, score: 88, type: 'Recycled' },
                'Tencel': { co2: 2.1, score: 92, type: 'Natural Fiber' },
                'Linen': { co2: 2.0, score: 93, type: 'Natural Fiber' },
                'Hemp': { co2: 1.2, score: 95, type: 'Natural Fiber' },
                'Wool': { co2: 5.0, score: 70, type: 'Natural Fiber' },
                'Polyester': { co2: 6.4, score: 40, type: 'Synthetic' },
                'Nylon': { co2: 8.0, score: 30, type: 'Synthetic' }
            };
            
            // NEW: Data structure for dependent dropdowns
            const constructions = {
                "Woven": ["Plain weave", "Twill weave", "Satin weave", "Denim", "Canvas", "Poplin", "Gabardine", "Herringbone", "Velvet", "Corduroy", "Terrycloth", "Broadcloth", "Serge"],
                "Circular Knit": ["Single jersey", "Double jersey", "Interlock", "Rib knit", "Milano rib", "Fleece (Brushed or Loopback)", "French terry", "Ponte di Roma (Ponte knit)", "Jacquard jersey", "Mesh knit", "Thermal knit (Waffle knit)", "Pointelle knit"],
                "Flat Knit": ["Cable knit", "Jacquard knit", "Intarsia knit", "Fully fashioned knit", "Full cardigan", "Half cardigan", "Jersey knit", "Waffle knit"],
                "Nonwoven": ["Spunbond", "Meltblown", "Spunlace (Hydroentangled)", "Needle-punched", "Thermal bonded", "Chemical bonded", "SMS (Spunbond‚ÄìMeltblown‚ÄìSpunbond)", "SMMS (Spunbond‚ÄìMeltblown‚ÄìMeltblown‚ÄìSpunbond)"]
            };

            let lastCalculatedData = null;

            // --- DOM ELEMENTS ---
            const fabricGrid = document.getElementById('fabricGrid');
            const fabricCountSpan = document.getElementById('fabricCount');
            const fabricTypeSelect = document.getElementById('fabricType');
            const fabricConstructionSelect = document.getElementById('fabricConstruction');
            const calculateFabricBtn = document.getElementById('calculateFabric');
            const saveFabricBtn = document.getElementById('saveFabric');
            const resetFabricBtn = document.getElementById('resetFabric');
            
            // --- HELPER FUNCTIONS ---

            // Updates the total fabric count display
            function updateFabricCount() {
                const count = fabricGrid.querySelectorAll('.fabric-card').length;
                fabricCountSpan.textContent = count;
            }

            // Creates the HTML string for a new main grid fabric card
            function createMainFabricCardHTML(data) {
                let badgesHTML = '';
                const uniqueTypes = [...new Set(data.composition.map(y => yarnData[y.yarn].type))];
                uniqueTypes.forEach(type => {
                    let badgeClass = '';
                    if (type === 'Recycled' || type === 'Natural Fiber') badgeClass = 'eco';
                    if (type === 'Synthetic') badgeClass = 'synthetic';
                    badgesHTML += `<span class="badge ${badgeClass}">${type}</span> `;
                });

                return `
                    <div class="fabric-header"> <div class="fabric-type">${data.type}</div> <h2 class="fabric-name">${data.name}</h2> <p class="fabric-origin">Source: Custom Production</p> </div>
                    <div class="fabric-body"> <p class="fabric-structure">Construction: ${data.construction}, ${data.weight}g/m¬≤</p>
                        <div class="metrics"> <div class="metric co2"> <div class="metric-title">CO‚ÇÇ/kg</div> <div class="metric-value co2-value">${data.co2.toFixed(2)}</div> </div> <div class="metric score"> <div class="metric-title">Sustainability</div> <div class="metric-value score-value">${Math.round(data.score)}</div> <div class="score-bar"> <div class="score-fill" style="width: ${Math.round(data.score)}%"></div> </div> </div> </div>
                        <div class="badges">${badgesHTML}</div>
                    </div>
                    <div class="fabric-footer"> <span class="fabric-uses">Last updated: ${new Date().toLocaleDateString('en-US')}</span> <button class="detail-btn">Details</button> </div>
                `;
            }

            // Resets all input fields in the calculator form
            function resetForm() {
                document.getElementById('fabricName').value = '';
                fabricTypeSelect.value = '';
                fabricWeight.value = '';
                fabricWidth.value = '';
                document.querySelectorAll('.yarn-select').forEach(select => select.value = '');
                document.querySelectorAll('.yarn-percentage').forEach(input => input.value = '');
                
                // Trigger the change event to reset the construction dropdown
                fabricTypeSelect.dispatchEvent(new Event('change'));

                document.querySelector('.fabric-result-name').textContent = 'Awaiting Calculation...';
                document.querySelector('.fabric-result-structure').textContent = 'Not yet determined';
                document.getElementById('previewCompositionList').innerHTML = '';
                document.getElementById('previewCo2').textContent = '0.0';
                document.getElementById('previewScore').textContent = '0';
                document.getElementById('previewScoreFill').style.width = '0%';
                lastCalculatedData = null;
            }

            // --- EVENT LISTENERS ---

            // NEW: Event listener for the Fabric Type dropdown
            fabricTypeSelect.addEventListener('change', function() {
                const selectedType = this.value;
                fabricConstructionSelect.innerHTML = ''; // Clear existing options

                if (selectedType && constructions[selectedType]) {
                    // Add a default option first
                    const defaultOption = document.createElement('option');
                    defaultOption.value = "";
                    defaultOption.textContent = "Select construction";
                    fabricConstructionSelect.appendChild(defaultOption);

                    // Populate with relevant options
                    const options = constructions[selectedType];
                    options.forEach(optionText => {
                        const option = document.createElement('option');
                        option.value = optionText;
                        option.textContent = optionText;
                        fabricConstructionSelect.appendChild(option);
                    });
                } else {
                    // If no type is selected, show a generic message
                    const defaultOption = document.createElement('option');
                    defaultOption.value = "";
                    defaultOption.textContent = "Select fabric type first";
                    fabricConstructionSelect.appendChild(defaultOption);
                }
            });

            // "CALCULATE" BUTTON
            calculateFabricBtn.addEventListener('click', function() {
                const fabricType = fabricTypeSelect.value;
                const fabricConstruction = fabricConstructionSelect.value;
                const fabricWeight = document.getElementById('fabricWeight').value;

                if (!fabricType || !fabricConstruction || !fabricWeight) {
                    alert('Please fill in the Fabric Type, Construction, and Weight fields.');
                    lastCalculatedData = null;
                    return;
                }

                const yarnInputs = document.querySelectorAll('.yarn-row');
                let composition = [];
                let totalPercentage = 0;
                yarnInputs.forEach(row => {
                    const yarn = row.querySelector('.yarn-select').value;
                    const percentage = parseFloat(row.querySelector('.yarn-percentage').value);
                    if (yarn && percentage > 0) {
                        composition.push({ yarn, percentage });
                        totalPercentage += percentage;
                    }
                });

                if (composition.length === 0) { alert('Please enter at least one yarn composition.'); lastCalculatedData = null; return; }
                if (Math.abs(totalPercentage - 100) > 0.1) { alert(`The sum of yarn percentages is ${totalPercentage.toFixed(1)}%. Please adjust to 100%.`); lastCalculatedData = null; return; }

                let totalCO2 = 0;
                let totalScore = 0;
                composition.forEach(item => {
                    totalCO2 += yarnData[item.yarn].co2 * (item.percentage / 100);
                    totalScore += yarnData[item.yarn].score * (item.percentage / 100);
                });

                lastCalculatedData = { name: document.getElementById('fabricName').value || 'Unnamed Fabric', type: fabricType, construction: fabricConstruction, weight: fabricWeight, composition: composition, co2: totalCO2, score: totalScore };
                
                document.querySelector('.fabric-result-name').textContent = 'Calculated Results';
                document.querySelector('.fabric-result-structure').textContent = `Construction: ${fabricConstruction}`;
                document.getElementById('previewCo2').textContent = totalCO2.toFixed(2);
                document.getElementById('previewScore').textContent = Math.round(totalScore);
                document.getElementById('previewScoreFill').style.width = `${Math.round(totalScore)}%`;
                
                const compositionList = document.getElementById('previewCompositionList');
                compositionList.innerHTML = '';
                composition.forEach(item => {
                    compositionList.innerHTML += `<div class="composition-item"><div class="composition-yarn-name">${item.yarn}</div><div class="composition-percentage">${item.percentage}%</div></div>`;
                });
                
                alert('Calculation complete! Results are shown on the preview card.');
            });

            // "SAVE TO DATABASE" BUTTON
            saveFabricBtn.addEventListener('click', function() {
                const fabricName = document.getElementById('fabricName').value.trim();
                if (!fabricName) { alert('Please enter a "Custom Fabric Name" before saving.'); return; }
                if (!lastCalculatedData) { alert('Please calculate the data first by clicking the "Calculate" button.'); return; }

                lastCalculatedData.name = fabricName;

                const cardElement = document.createElement('div');
                cardElement.className = 'fabric-card';
                cardElement.innerHTML = createMainFabricCardHTML(lastCalculatedData);

                fabricGrid.appendChild(cardElement);
                updateFabricCount();
                alert(`"${fabricName}" has been successfully added to the main list!`);
                resetForm();
            });

            // "RESET" BUTTON
            resetFabricBtn.addEventListener('click', function() {
                resetForm();
                alert('Form and preview have been reset!');
            });
            
            // --- PAGE INITIALIZATION ---
            updateFabricCount();
            fabricTypeSelect.dispatchEvent(new Event('change')); // Initialize construction dropdown on page load

            // Chart.js and other original functions
            const ctx = document.getElementById('impactChart').getContext('2d');
            const impactChart = new Chart(ctx, { type: 'bar', data: { labels: ['Woven', 'Circular Knit', 'Flat Knit', 'Nonwoven', 'Custom Fabrics'], datasets: [ { label: 'CO‚ÇÇ Emission (kg/kg)', data: [3.2, 2.5, 2.8, 4.1, 2.3], backgroundColor: 'rgba(0, 85, 48, 0.7)', borderColor: 'rgba(0, 85, 48, 1)', borderWidth: 1 }, { label: 'Sustainability Score', data: [76, 82, 79, 68, 86], backgroundColor: 'rgba(249, 186, 0, 0.7)', borderColor: 'rgba(249, 186, 0, 1)', borderWidth: 1 } ] }, options: { responsive: true, plugins: { legend: { position: 'top' }, title: { display: true, text: 'Environmental Performance of Fabric Types' } }, scales: { y: { beginAtZero: true, title: { display: true, text: 'Values' } } } } });
            document.querySelectorAll('.category-item').forEach(item => { item.addEventListener('click', function() { document.querySelectorAll('.category-item').forEach(i => { i.classList.remove('active'); }); this.classList.add('active'); alert(`Category "${this.querySelector('span').textContent}" selected!`); }); });
            document.getElementById('clearCustomFabrics').addEventListener('click', function() { if (confirm('Are you sure you want to delete all custom fabrics?')) { alert('Custom fabrics have been cleared!'); } });
        });
    </script>
</body>
</html>